<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CryptocurrencyRates.Views.CryptocurrencyPage"
             xmlns:viewmodel="clr-namespace:CryptocurrencyRates.ViewModels"
             x:DataType="viewmodel:CryptocurrencyViewModel"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.Maui;assembly=LiveChartsCore.SkiaSharpView.Maui"
             Title="CryptocurrencyPage">
    <VerticalStackLayout>
        <Label 
            Text="{Binding selectedItem.Alias}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
    </VerticalStackLayout>
    <Grid>
        <lvc:CartesianChart
                Series="{Binding Series}">
        </lvc:CartesianChart>
    </Grid>
</ContentPage>